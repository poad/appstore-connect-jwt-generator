{
  "name": "commonjs",
  "version": "1.0.0",
  "main": "esm/main.mjs",
  "license": "MIT",
  "private": true,
  "scripts": {
    "package": "ncc build --source-map --license licenses.txt -m -q --target es2021",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --silent=false --verbose false",
    "build": "tsc"
  },
  "type": "module",
  "devDependencies": {
    "@swc/core": "*",
    "@types/jest": "*",
    "@types/node": "*",
    "@vercel/ncc": "*",
    "jest": "*",
    "ts-jest": "^28.0.0-next.3",
    "typescript": "*"
  },
  "dependencies": {
    "appstore-connect-jwt-generator-core": "../../package/"
  },
  "jest": {
    "testEnvironment": "node",
    "clearMocks": true,
    "extensionsToTreatAsEsm": [
      ".ts",
      ".cts"
    ],
    "moduleFileExtensions": [
      "cts",
      "ts",
      "js",
      "cjs",
      "json",
      "node"
    ],
    "testMatch": [
      "**/__tests__/*.test.ts",
      "**/__tests__/*.test.cts"
    ],
    "transform": {
      "^.+\\.m?(t|j)sx?$": [
        "ts-jest/legacy"
      ]
    },
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/dist",
      "<rootDir>/node_modules"
    ],
    "verbose": true
  }
}
