{
  "name": "commonjs",
  "version": "1.0.0",
  "main": "esm/main.mjs",
  "license": "MIT",
  "private": true,
  "scripts": {
    "package": "ncc build --source-map --license licenses.txt -m -q --target es2021",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --silent=false --verbose false",
    "pretest": "pnpm build",
    "build": "tsc"
  },
  "type": "module",
  "devDependencies": {
    "@swc/core": "1.3.11",
    "@swc/jest": "^0.2.37",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.6",
    "@vercel/ncc": "^0.36.1",
    "jest": "^29.7.0",
    "source-map-support": "^0.5.21",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "appstore-connect-jwt-generator-core": "link:../../package"
  },
  "jest": {
    "testEnvironment": "node",
    "clearMocks": true,
    "extensionsToTreatAsEsm": [
      ".ts",
      ".cts",
      ".mts"
    ],
    "moduleFileExtensions": [
      "cts",
      "ts",
      "mts",
      "js",
      "cjs",
      "mjs",
      "json",
      "node"
    ],
    "testMatch": [
      "**/__tests__/*.test.ts",
      "**/__tests__/*.test.cts",
      "**/__tests__/*.test.mts"
    ],
    "transform": {
      "^.+\\.m?(t|j)sx?$": [
        "@swc/jest",
        {
          "jsc": {
            "parser": {
              "syntax": "typescript",
              "tsx": false,
              "decorators": true,
              "dynamicImport": true
            },
            "minify": {
              "compress": {
                "unused": true
              },
              "mangle": true
            },
            "target": "es2021",
            "transform": {
              "optimizer": {
                "jsonify": {
                  "minCost": 0
                }
              }
            }
          },
          "minify": true,
          "sourceMaps": true,
          "module": {
            "type": "es6",
            "strict": true,
            "strictMode": true,
            "lazy": true,
            "noInterop": false
          }
        }
      ]
    },
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/ems",
      "<rootDir>/dist",
      "<rootDir>/node_modules"
    ],
    "verbose": true
  },
  "engines": {
    "npm": "use pnpm please!",
    "yarn": "use pnpm please!",
    "pnpm": ">=8.0.0",
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.13.2+sha512.88c9c3864450350e65a33587ab801acf946d7c814ed1134da4a924f6df5a2120fd36b46aab68f7cd1d413149112d53c7db3a4136624cfd00ff1846a0c6cef48a"
}
