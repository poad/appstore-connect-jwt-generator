{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "node",
    "rootDirs": ["./src"],
    "sourceMap": false,
    "outDir": "./esm",
    "inlineSourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "./esm",
    "**/*.test.ts",
    "tests"
  ]
}
